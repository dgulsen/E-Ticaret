@model AksesuarSat_V1.Models.indirimler

@{
    ViewBag.Title = "indirimEkleIndex";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLayout.cshtml";
}

<div class="header" style="background-color:#2b982b; text-align:center;">
    <h2 style=" color:white">İndirim Ekleme Sayfası</h2>
</div>

<div class="body">
    <form action="~/AdminPaneli/indirimler/indirimEkleIndex" id="form_validation" method="POST">
        <div class="form-group form-float">
            <div class="form-line">
                @*<input type="text" class="form-control" name="kategoriId" required>
                    <label class="form-label">Kategori</label>*@
                <select name="indirimTurAdi" class="form-control">
                    @foreach (var item in ViewBag.TurListesi)
                    {
                        <option @*value="@item.indirimTurAdi"*@>@item.indirimTurAdi </option>
                    }

                </select>
            </div>
        </div>
        <br />
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" class="form-control" name="fiyatSekli" required>
                <label class="form-label">İndirim Fiyat Şekli</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <label class="form-label">Başlama Tarihi</label> <br />
                <input type="date" class="form-control" name="baslamaTarih" required>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <label class="form-label">Bitiş Tarihi</label> <br />
                <input type="date" class="form-control" name="bitisTarih">
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="number" class="form-control" name="miktar" required>
                <label class="form-label">İndirim Miktarı</label>
            </div>
        </div>
        <div class="form-group">
            <input type="radio" name="durumu" value="True" id="aktif" class="with-gap">
            <label for="aktif">Aktif</label>
            <input type="radio" name="durumu" value="False" id="pasif" class="with-gap">
            <label for="pasif" class="m-l-20">Pasif</label>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <textarea name="Aciklama" cols="30" rows="5" class="form-control no-resize" required></textarea>
                <label class="form-label">Açıklama</label>
            </div>
        </div>
        <div style="text-align:left">
            <button class="btn btn-primary waves-effect" type="submit" style="text-align:left">KAYDET</button>

            @Html.ActionLink("indirim Listesine Dön", "indirimListesi", null, new { @class = "btn btn-success" })
        </div>
    </form>
</div>

