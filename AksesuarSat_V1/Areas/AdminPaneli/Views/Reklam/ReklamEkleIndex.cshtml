
@{
    ViewBag.Title = "ReklamEkleIndex";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLayout.cshtml";
}
<div class="header" style="background-color:#009688;text-align:center">
    <h2 style="color:white">REKLAM EKLEME</h2>
</div>
<div class="body">
    <form id="form_validation" method="POST">
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" class="form-control" name="reklamaciklama" required>
                <label class="form-label">REKLAM AÇIKLAMA</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <label class="label label-danger">REKLAM BAŞLANGIÇ TARİHİ</label><br />
                <input type="date" class="form-control" name="reklambaslangictarihi" required>

            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <label class="label label-danger">REKLAM BİTİŞ TARİHİ</label><br />
                <input type="date" class="form-control" name="reklambitistarihi" required>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" class="form-control" name="resim1" required>
                <label class="form-label">RESİM 1</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" class="form-control" name="resim2" required>
                <label class="form-label">RESİM 2</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input type="text" class="form-control" name="resim3" required>
                <label class="form-label">RESİM 3</label>
            </div>
        </div>

        @*<div class="form-group">
                <input type="checkbox" id="checkbox" name="checkbox">
                <label for="checkbox">I have read and accept the terms</label>
            </div>*@
        <button class="btn btn-primary waves-effect" type="submit">EKLE</button>
        @Html.ActionLink("Reklamlar Listesine Git", "ReklamListesi", null, new { @class = "btn btn-success waves-effect" })
    </form>
</div>


