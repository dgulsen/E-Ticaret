@using PagedList;
@using PagedList.Mvc;
@model IPagedList<AksesuarSat_V1.Models.Personeller>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Soyadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Telefon)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Adres)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cinsiyet)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().MedeniHali)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DogumYeri)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DogumTarihi)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IseGirisTarihi)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinsiyet)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.MedeniHali)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DogumYeri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DogumTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IseGirisTarihi)
                </td>*@
            <td>
                @Html.ActionLink("Düzenle", "PersonelGuncelle", new { guncelleId = item.PersonellerID }, new { @class = "btn-sm btn-info" })
                @Html.ActionLink("Detay", "PersonelDetay", new { id = item.PersonellerID }, new { @class = "btn-sm btn-warning" })
                @Html.ActionLink("Sil", "PersonelSil", new { silId = item.PersonellerID }, new { @class = "btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, numara => Url.Action("PersonelListesi", "Personel", new { sayfaNo = numara }),PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions {UpdateTargetId="dvPersonelListesi"}))
