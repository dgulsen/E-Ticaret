@model AksesuarSat_V1.Models.UrunStoklari

@{
    ViewBag.Title = "UrunStokEkle";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLayout.cshtml";
}

<div class="header">
    <h2>Ürün Stok Ekle</h2>
</div>
<div class="body">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="padding:20px 20px 20px 20px;">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Urunler.UrunAdi, "Ürün Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("UrunID", null, htmlAttributes: new { @class = "form-control-label" })
                    @Html.ValidationMessageFor(model => model.Urunler.UrunAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-float">
                <div class="form-line">
                    <label class="form-label">Stok Başlangıç Tarihi Seçiniz</label><br />
                    <input type="date" class="form-control" name="basTarihi" required>
                </div>
            </div>

            <div class="form-group form-float">
                <div class="form-line">
                    <input type="number" class="form-control" name="stokmiktari" required>
                    <label class="form-label">Stok Miktarı</label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-line">
                    <textarea name="aciklama" cols="30" rows="5" class="form-control no-resize"></textarea>
                    <label class="form-label">Açıklama</label>
                </div>
            </div>

            <div class="form-group" style="margin-top:20px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ekle" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    <div style="margin-left:20px;">
        @Html.ActionLink("Listeye Dön", "UrunStoklariListesi", null, new { @class = "btn btn-info" })
    </div>
</div>

